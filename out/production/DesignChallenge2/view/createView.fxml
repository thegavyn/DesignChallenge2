<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="400.0" prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/8"
      fx:controller="controller.CreateController">
    <children>
        <TextField fx:id="nameTextField"/>
        <HBox spacing="30.0">
            <children>
                <RadioButton fx:id="eventRadioButton" mnemonicParsing="false" text="Event">
                    <toggleGroup>
                        <ToggleGroup fx:id="typeSelection"/>
                    </toggleGroup>
                </RadioButton>
                <RadioButton fx:id="taskRadioButton" mnemonicParsing="false" text="Task" toggleGroup="$typeSelection"/>
            </children>
            <VBox.margin>
                <Insets left="10.0"/>
            </VBox.margin>
        </HBox>
        <HBox spacing="10.0">
            <children>
                <DatePicker fx:id="calendarDatePicker"/>
                <TextField fx:id="startTimeTextField"/>
                <Label text="to"/>
                <TextField fx:id="endTimeTextField"/>
            </children>
        </HBox>
        <HBox spacing="10.0">
            <children>
                <HBox prefHeight="25.0" prefWidth="290.0"/>
                <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveFormData" text="Save"/>
                <Button fx:id="discardButton" mnemonicParsing="false" onAction="#discardFormData" text="Discard"/>
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
    </padding>
</VBox>
