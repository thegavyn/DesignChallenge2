<BorderPane fx:id="mainBorderPane" prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainController">
   <top>
      <HBox spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <VBox>
               <children>
                  <Label prefHeight="17.0" prefWidth="131.0" text="My Productivity Tool" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="84.0" text="Today" />
               </children>
            </VBox>
            <HBox>
               <children>
                  <Label text="&lt;Date&gt;" />
               </children>
            </HBox>
            <Pane prefWidth="200.0" />
            <HBox>
               <children>
                  <Button mnemonicParsing="false" text="Day" />
                  <Button mnemonicParsing="false" text="Agenda" />
               </children>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </top>
   <left>
      <VBox fx:id="sideBarVBox" prefHeight="200.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" text="Create" />
            <VBox fx:id="miniCalendarVBox" prefHeight="200.0" prefWidth="100.0" style="-fx-effect: null">
               <children>
                  <!-- <DatePicker fx:id="calendarDatePicker" /> -->
               </children></VBox>
            <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0">
               <children>
                  <Label text="View" />
                  <CheckBox mnemonicParsing="false" text="Event" />
                  <CheckBox mnemonicParsing="false" text="Task" />
               </children>
            </VBox>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </VBox>
   </left>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</BorderPane>
